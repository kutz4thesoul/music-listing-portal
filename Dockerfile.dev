FROM ghcr.io/oit-development-team/php:8.2-latest 

ENV SESSION_SECURE_COOKIE=true

COPY --from=composer /usr/bin/composer /usr/bin/composer

USER root

#Install OS Modules
RUN apk -U upgrade \
	&& apk --no-cache add \
	php82-pdo_sqlite \
	nodejs \
	npm
	
#Adjust max filesize
RUN sed -i 's/upload_max_filesize = 20M/upload_max_filesize = 20M/' /etc/nginx/nginx.conf
RUN sed -i 's/post_max_size = 20M/post_max_size = 100M/' /etc/nginx/nginx.conf

RUN echo "upload_max_filesize = 20M" >> /etc/php82/conf.d/custom.ini
RUN echo "post_max_size = 100M" >> /etc/php82/conf.d/custom.ini

#Adjust timeout - IF > 300 then the kubernetes ingress will also need to be increased
RUN sed -i 's/keepalive_timeout 65/keepalive_timeout 60/' /etc/nginx/nginx.conf
RUN sed -i 's/keepalive_timeout 60;/&\nproxy_read_timeout 60;/' /etc/nginx/nginx.conf
RUN sed -i '/proxy_read_timeout 60;/a\fastcgi_read_timeout 60;' /etc/nginx/nginx.conf
RUN echo 'max_execution_time = 60' >> /etc/php82/conf.d/custom.ini


USER webuser